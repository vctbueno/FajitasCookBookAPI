    "components": {
        "schemas": {
            "Ingredient": {
                "title": "Root Type for Ingredient",
                "description": "Représentation d'un ingrédient côté API. ",
                "required": [
                    "id",
                    "Nom",
                    "Unites"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "Nom": {
                        "type": "string"
                    },
                    "Unites": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "example": {
                    "id": "0000",
                    "Nom": "Pain de Mie",
                    "Unites": [
                        "tranches",
                        "grammes"
                    ]
                }
            },
            "Recette": {
                "title": "Root Type for recette",
                "description": "Représentation d'une recette côté API.",
                "required": [
                    "CreeeLe",
                    "Description",
                    "Difficulte",
                    "Duree",
                    "Etapes",
                    "id",
                    "Ingredients",
                    "MiseAJourLe",
                    "Nom",
                    "NombreDeParts"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "description": "id de la recette",
                        "type": "string",
                        "example": "\"0000\""
                    },
                    "Nom": {
                        "description": "\"Nom du plat préparé.\"",
                        "type": "string",
                        "example": "\"Sandwich aux glaçons\""
                    },
                    "Description": {
                        "description": "Description de la recette",
                        "type": "string",
                        "example": "\"La recette originale du sandwich aux glaçons\""
                    },
                    "NombreDeParts": {
                        "format": "int32",
                        "description": "Nombre de portions prévues avec les quantité données pour les ingrédients.",
                        "type": "integer",
                        "example": "1"
                    },
                    "Ingredients": {
                        "description": "Liste des ingrédients avec leur quantité et l'unité utilisée pour la mesurer.",
                        "type": "array",
                        "items": {},
                        "example": "[\n    {\n        \"Ingredient\": {\n            \"id\": \"0000\",\n            \"Nom\": \"Pain de Mie\",\n            \"Unites\": [\n                \"tranche\",\n                \"gramme\"\n            ]\n        },\n        \"Quantite\": 2,\n        \"Unite\": \"tranche\"\n    },\n    {\n        \"Ingredient\": {\n            \"id\": \"0000\",\n            \"Nom\": \"Glace\",\n            \"Unites\": [\n                \"glaçon\",\n                \"gramme\",\n                \"L\"\n            ]\n        },\n        \"Quantite\": 2,\n        \"Unite\": \"glaçon\"\n    }\n]"
                    },
                    "Etapes": {
                        "description": "Liste des étapes à suivre pour réaliser la recette.",
                        "type": "array",
                        "items": {},
                        "example": "[\n    {\n        \"etape\": 1,\n        \"description\": \"Placer les deux tranches de pain de mie sur le plan de travail.\"\n    },\n    {\n        \"etape\": 2,\n        \"description\": \"Sur l'une des tranches déposer les deux glaçons répartie sur la longueur du pain et centré sur la largeur.\"\n    },\n    {\n        \"etape\": 3,\n        \"description\": \"Refermer le sandwich en plaçant la deuxième tranche sur la tranche avec les glaçons. Le sandwich est pret.\"\n    }\n]"
                    },
                    "Difficulte": {
                        "description": "Niveau de difficulté de la recette",
                        "type": "string",
                        "example": "\"Facile\""
                    },
                    "Duree": {
                        "description": "Temps nécessaire pour réaliser la recette",
                        "properties": {
                            "temps": {
                                "format": "int32",
                                "type": "integer"
                            },
                            "duree": {
                                "type": "string"
                            }
                        },
                        "example": "{\n    \"temps\": 3,\n    \"duree\": \"minutes\"\n}"
                    },
                    "CreeeLe": {
                        "format": "date",
                        "description": "Date de création de la recette",
                        "type": "string",
                        "example": "\"2025-12-12\""
                    },
                    "MiseAJourLe": {
                        "format": "date",
                        "description": "Date de la dernière modification de la recette.",
                        "type": "string",
                        "example": "\"2025-12-12\""
                    },
                    "Image": {
                        "description": "Lien vers une photo du plat réalisé.",
                        "type": "string",
                        "example": "\"https://pbs.twimg.com/media/EsmU-HEXMAcjBzq?format=jpg&name=small\""
                    }
                },
                "example": {
                    "id": "0000",
                    "Nom": "Sandwich aux glaçons",
                    "Description": "La recette originale du sandwich aux glaçons",
                    "NombreDeParts": 1,
                    "Ingredients": [
                        {
                            "Ingredient": {
                                "id": "0000",
                                "Nom": "Pain de Mie",
                                "Unites": [
                                    "tranche",
                                    "gramme"
                                ]
                            },
                            "Quantite": 2,
                            "Unite": "tranche"
                        },
                        {
                            "Ingredient": {
                                "id": "0000",
                                "Nom": "Glace",
                                "Unites": [
                                    "glaçon",
                                    "gramme",
                                    "L"
                                ]
                            },
                            "Quantite": 2,
                            "Unite": "glaçon"
                        }
                    ],
                    "Etapes": [
                        {
                            "etape": 1,
                            "description": "Placer les deux tranches de pain de mie sur le plan de travail."
                        },
                        {
                            "etape": 2,
                            "description": "Sur l'une des tranches déposer les deux glaçons répartie sur la longueur du pain et centré sur la largeur."
                        },
                        {
                            "etape": 3,
                            "description": "Refermer le sandwich en plaçant la deuxième tranche sur la tranche avec les glaçons. Le sandwich est pret."
                        }
                    ],
                    "Difficulte": "Facile",
                    "Duree": {
                        "temps": 3,
                        "duree": "minutes"
                    },
                    "CreeeLe": "12/12/2025",
                    "MiseAJourLe": "12/12/2025",
                    "Image": "https://pbs.twimg.com/media/EsmU-HEXMAcjBzq?format=jpg&name=small"
                }
            }
        }
    }
